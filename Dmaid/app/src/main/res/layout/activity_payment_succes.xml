<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.Customer.PaymentSucces">

    <ImageView
            android:id="@+id/imageView7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_baseline_verified_24"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="122dp"
            android:layout_marginEnd="163dp"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congratulations.. Payment Successful"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"

            android:layout_below="@+id/imageView7"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/summary"
            android:layout_below="@+id/textView41"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.619"
            android:layout_marginTop="136dp"
            app:layout_constraintTop_toBottomOf="@+id/textView41"
            android:layout_marginBottom="31dp"
            app:layout_constraintBottom_toTopOf="@+id/imageButton7" />


    <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView41"
            android:text="Balance Amount"
            tools:layout_editor_absoluteX="99dp"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toTopOf="@+id/imageView9" />


    <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView42"
            android:text="VAT (18%)"
            tools:layout_editor_absoluteX="103dp"
            app:layout_constraintTop_toBottomOf="@+id/textView42"
            android:layout_marginTop="32dp" />

    <TextView
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView43"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Total"
            app:layout_constraintEnd_toStartOf="@+id/textView47"
            android:layout_marginEnd="120dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
            android:layout_marginBottom="48dp" />

    <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView41"
            android:text="10000 rs"
            android:layout_marginBottom="153dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
            app:layout_constraintStart_toStartOf="@+id/imageView9"
            android:layout_marginStart="189dp" />

    <TextView
            android:id="@+id/textView46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView42"
            android:text="50rs"
            tools:layout_editor_absoluteY="531dp"
            tools:layout_editor_absoluteX="287dp" />

    <TextView
            android:id="@+id/textView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView43"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="10050 rs"
            app:layout_constraintStart_toStartOf="@+id/imageView9"
            android:layout_marginStart="180dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
            android:layout_marginBottom="48dp" />

    <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/download"
            android:layout_below="@+id/textView47"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="96dp"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>