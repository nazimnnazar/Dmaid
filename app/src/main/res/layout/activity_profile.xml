<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Customer.Profile"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mainbg">





        <TextView
            android:id="@+id/textView10"
            android:layout_width="376dp"
            android:layout_height="40dp"
            android:text="Upload Your Profile Details"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textStyle="bold"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="20dp"
            />



        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileiv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:background="@drawable/et_style"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person_grey"/>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name*"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_below="@+id/profileiv"
            android:layout_marginLeft="50dp"/>

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="297dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="50dp"
            />


        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name*"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/editTextTextPersonName"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            />


        <EditText
            android:id="@+id/ed2"
            android:layout_width="297dp"
            android:layout_height="45dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:inputType="textPersonName"

            android:gravity="center"
            android:layout_below="@+id/tv2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"/>


        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Door No*"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/ed2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"/>

        <EditText
            android:id="@+id/ed3"
            android:layout_width="297dp"
            android:layout_height="45dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:layout_below="@+id/tv3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="33dp"
            android:layout_height="25dp"
            android:text="Pin*"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/ed3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp" />


        <EditText
            android:id="@+id/ed4"
            android:layout_width="297dp"
            android:layout_height="45dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:layout_below="@+id/tv4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"  />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apartment*"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/ed4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp" />

        <EditText
            android:id="@+id/ed5"
            android:layout_width="297dp"
            android:layout_height="45dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:layout_below="@+id/tv5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp" />

        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email*"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/ed5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp" />

        <EditText
            android:id="@+id/ed6"
            android:layout_width="297dp"
            android:layout_height="45dp"
            android:layout_below="@+id/tv6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/et_style"
            android:ems="10"
            android:gravity="center"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/confirmbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ed6"
            android:layout_marginLeft="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="UPDATE" />


    </RelativeLayout>

</ScrollView>